@model IEnumerable<SmartInventory.Models.Category>

@{
    ViewData["Title"] = "CategoryList";
}

<h1>Category List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           
            <td>
                <a asp-action="CategoryDetails" asp-route-id="@item.Id">View Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>

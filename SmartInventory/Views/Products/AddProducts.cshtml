@model SmartInventory.Models.Product

@{
    ViewData["Title"] = "Add Products";
}


<h4>Add Product View</h4>
<hr />
<div class="container border">
<div class="row ">
    <div class="col-md-4">
        <form asp-action="AddProducts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3  ">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.Categories">
                    <option value="">--Select Category--</option>
                </select>
            </div>
            <div class="form-group m-3">
                <label asp-for="CreationDate" class="control-label">Date</label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <input type="submit" value="Add Product" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageProducts">Manage Products</a> | <a asp-action="ListProducts">Products List</a>
</div>

</div>
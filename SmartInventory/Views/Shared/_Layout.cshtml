<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartInventory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartInventory.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
</head>
<body>
    <header class="header">
        <div id="notifications-container" class="position-fixed bottom-0 start-0 p-3" style="z-index: 11">
            @await Html.PartialAsync("_Notification")
        </div>
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SmartInventory</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Blank">Products</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="InventoryTransc" asp-action="Blank">Inventory Transactions</a>
                        </li>
                
         
                    </ul>
                </div>
               
                <div class="float-right" style="margin-left: 10px;">
                    <form asp-action="Logout" asp-controller="Access" method="post">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var userName = User.Identity.Name.Split('@')[0].Trim();
                            <span>Welcome, <strong>@userName</strong>!</span>
                            <button type="submit" class="btn btn-sm btn-primary">Logout</button>
                        }
                    </form>
                </div>
            </div>
        </nav>
    </header>
    @if (ViewContext.RouteData.Values["Controller"].ToString() == "Categories")
    {
    <div class="col-md-4">
        <!-- Render the sidebar partial view using the partial tag helper -->
            <partial name="Side Bars/_Products_SideBar" />
        </div>
    }

    @if (ViewContext.RouteData.Values["Controller"].ToString() == "Products")
    {
        <div class="col-md-4">
            <!-- Render the sidebar partial view using the partial tag helper -->
            <partial name="Side Bars/_Products_SideBar" />
        </div>
    }

    @if (ViewContext.RouteData.Values["Controller"].ToString() == "InventoryTransc")
    {
        <div class="col-md-4">
            <!-- Render the sidebar partial view using the partial tag helper -->
            <partial name="Side Bars/_InventoryTransc" />
        </div>
    }

    @if (ViewContext.RouteData.Values["Controller"].ToString() == "Analytics")
    {
        <div class="col-md-4">
            <!-- Render the sidebar partial view using the partial tag helper -->
            <partial name="Side Bars/_Analytics_SideBar" />
        </div>
    }


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white">
     
        <div class="container">
            &copy; 2024 - SmartInventory - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

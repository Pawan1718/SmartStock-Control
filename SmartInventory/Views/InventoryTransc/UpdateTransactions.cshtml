@model SmartInventory.Models.InventoryItem

@{
    ViewData["Title"] = "Edit";
}

<h4 >Update Transaction View</h4>
<hr />
<br />
<div class="container border">
   

    <form asp-action="UpdateTransactions" id="inventoryForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <td>
                                <div class="form-group mt-3">
                                    <label asp-for="TransactionType" class="control-label">Transaction Type</label>
                                    <select asp-for="TransactionType" class="form-control" id="Transc">
                                        <option value="Stock In">Stock In</option>
                                        <option value="Stock Out">Stock Out</option>
                                    </select>
                                    <span asp-validation-for="TransactionType" class="text-danger"></span>
                                </div>
                            </td>
                            <td>
                                <div class="form-group mt-3">
                                    <label asp-for="ProductId" class="control-label">Product</label>
                                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Product">
                                        <option value="">-- Select Product --</option>
                                    </select>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group mt-3">
                                    <label asp-for="Quantity" class="control-label">Quantity</label>
                                    <input asp-for="Quantity" class="form-control" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </td>
                            <td>
                                <div class="form-group mt-3">
                                    <label asp-for="Price" class="control-label">Price</label>
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group mt-3">
                                    <label asp-for="TransactionDate" class="control-label">Transaction Date</label>
                                    <input asp-for="TransactionDate" class="form-control" />
                                    <span asp-validation-for="TransactionDate" class="text-danger"></span>
                                </div>
                            </td>
                            <td class="text-center mt-3">
                                <div class="form-group mt-5">
                                    <label asp-for="isRejected" class="control-label">Reject</label>
                                    <input asp-for="isRejected" class="form-check-input" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-center mt-3">
                                <div class="form-group">
                                    <label asp-for="RejectedQty" class="control-label">Rejected Quantity</label>
                                    <input asp-for="RejectedQty" class="form-control" />
                                    <span asp-validation-for="RejectedQty" class="text-danger"></span>
                                </div>
                            </td>
                            <td colspan="2">
                                <div class="form-group mt-3">
                                    <label asp-for="ReasonForRejection" class="control-label">Reason for Rejection</label>
                                    <select asp-for="ReasonForRejection" class="form-control" id="ReasonForRejection" disabled>
                                        <option value="">-- Select Reason --</option>
                                        <option value="Damaged">Damaged</option>
                                        <option value="Expired">Expired</option>
                                        <option value="Incorrect Item">Incorrect Item</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="ReasonForRejection" class="text-danger"></span>

                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <input type="submit" value="Update" class="btn btn-primary " />
            </div>
        </div>
    </form>

    <div class="row mt-3">
        <div class="col-md-6">
            <a asp-action="ManageTransactions">Manage Transc.</a>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // Handler for checkbox change event
            $('#isRejected').change(function () {
                var isRejectedChecked = $(this).prop('checked');
                // Enable or disable the Reason for Rejection dropdown based on the checkbox state
                $('#ReasonForRejection').prop('disabled', !isRejectedChecked);
            });
        });
    </script>
}
